{
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block-db-commands.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/git-guard.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "mcp__acp__Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block-db-commands.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/git-guard.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
